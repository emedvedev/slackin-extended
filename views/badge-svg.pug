-
  const width = str => 7 * str.length;
  const title = 'slack';
  const pad = 8; // left / right padding
  const sep = 4; // middle separation
  let value = active ? `${active}/${total}` : ('' + total || 'â€“');
  let lw = pad + width(title) + sep; // left side width
  let rw = sep + width(value) + pad; // right side width
  let tw = lw + rw; // total width

svg(xmlns='http://www.w3.org/2000/svg', width=tw, height='20')

  rect(rx='3', height='20', width=tw, fill='#555')
  rect(rx='3', height='20', width=rw, fill=bg, x=lw)

  path(d=`M${lw} 0h${sep}v20h-${sep}z`, fill=bg)

  g(text-anchor='middle', font-family='Verdana', font-size='11')

    text(fill='#010101', x=Math.round(lw / 2), y='15', fill-opacity='.3')= title
    text(fill='#fff', x=Math.round(lw / 2), y='14')= title

    text(fill='#010101', x=(tw + Math.round(lw / 2)), y='15', fill-opacity='.3')= value
    text(fill=fg, x=(tw + Math.round(lw / 2)), y='14')= value
