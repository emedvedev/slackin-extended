{
  "name": "slackin-extended",
  "version": "1.1.11",
  "description": "Public Slack organizations made easy",
  "repository": "emedvedev/slackin-extended",
  "license": "MIT",
  "main": "./lib/index.js",
  "bin": {
    "slackin": "./bin/slackin"
  },
  "files": [
    "assets",
    "bin",
    "lib",
    "views"
  ],
  "dependencies": {
    "args": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "debug": "^4.1.1",
    "email-regex": "^4.0.0",
    "express": "^4.17.1",
    "hostenv": "^1.0.6",
    "micromatch": "^3.1.10",
    "node-sass": "^4.12.0",
    "pug": "^2.0.4",
    "socket.io": "^2.3.0",
    "superagent": "^3.8.3",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "nock": "^11.5.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "dev": "nodemon --watch lib/ --exec \"npm start\"",
    "lint": "eslint --report-unused-disable-directives --ignore-path .gitignore .",
    "mocha": "mocha --exit",
    "test": "npm run build && npm run lint && npm run mocha",
    "build": "node-sass --output-style compressed --precision 6 scss/ -o assets/",
    "start": "cross-env-shell node ./bin/slackin $SLACK_SUBDOMAIN $SLACK_API_TOKEN --coc \\\"$SLACKIN_COC\\\" --channels \\\"$SLACKIN_CHANNELS\\\"",
    "prebublish": "npm run build"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base"
  },
  "now": {
    "name": "slackin",
    "type": "npm",
    "files": [
      "bin",
      "lib",
      "views",
      "assets",
      "scss",
      "gulpfile.babel.js"
    ],
    "env": [
      "SLACK_SUBDOMAIN",
      "SLACK_API_TOKEN"
    ]
  }
}
