{
  "version": 2,
  "env": {
    "SLACK_SUBDOMAIN": "@slack-subdomain",
    "SLACK_API_TOKEN": "@slack-api-token"
  },
  "github": {
    "silent": true
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "assets" }
    },
    {
      "src": "bin/slackin.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "$1" },
    { "src": "/slackin.js", "dest": "badge.js" },
    { "src": "/(.*)", "dest": "bin/slackin.js" }
  ]
}
